@using RentACar_UI.Areas.AdminPanel.Models;
@model InfoBoxParameter

<div class="col-lg-3 col-6">
    <!-- small box -->
    <div class="small-box @Model.Background">
        <div class="inner">
            <h3>@Model.Count</h3>
            <p>@Model.Title</p>
        </div>
        <div class="icon">
            <i class="ion @Model.Icon"></i>
        </div>
        <a href="#" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
    </div>
</div>