<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tblCotnacts").DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
        $(document).on("click", ".btnDelete", function () {
            var rsrvID = $(this).attr("ContactID");
            var tr = $(this).parent().parent();
            Swal.fire({
                title: "Ürün Silinecek",
                text: "Emin misiniz",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Sil"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: "/AdminPanel/Contacts/DeleteContact/" + rsrvID,
                        method: "post",
                        success: function (response) {
                            if (response.result) {
                                Swal.fire({
                                    title: "Başarılı",
                                    text: response.message,
                                    icon: "success",
                                    confirmButtonColor: "#3085d6",
                                    cancelButtonColor: "#d33",
                                    confirmButtonText: "Kapat"
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        $(tr).remove();
                                        //window.location.reload();
                                    }
                                });
                            }
                            else {
                                Swal.fire({
                                    position: "top-end",
                                    icon: "error",
                                    title: response.message,
                                    showConfirmButton: false,
                                    timer: 1500
                                });
                            }
                        }
                    });
                }
                else {

                }
            });
        });

        // Checkbox değişim olayı
        $(document).on("change", ".chkContactRead", function () {
            var contID = $(this).attr("ContactID");
            var isChecked = $(this).is(":checked");
            var model = {
                ContactID: contID,
                ContactRead: isChecked
            };

            $.ajax({
                url: "/AdminPanel/Contacts/EditContact",
                method: "post",
                datatype: "json",
                data: { dto: model },
                success: function (response) {
                    if (response.result) {
                        Swal.fire({
                            title: "Başarılı",
                            text: response.message,
                            icon: "success",
                            confirmButtonColor: "#3085d6",
                            cancelButtonColor: "#d33",
                            confirmButtonText: "Kapat"
                        }).then((result) => {
                            if (result.isConfirmed) {
                                $("#divEditContact").modal("hide");
                                window.location.reload();
                            }
                        });
                    }
                    else {
                        Swal.fire({
                            position: "top-end",
                            icon: "error",
                            title: response.message,
                            showConfirmButton: false,
                            timer: 1500
                        });
                    }
                }
            });
        });
    });
</script>

<div class="row">
    <div class="card col-12">
        <div class="card-header">
            <h3 class="card-title">Kayıtlı Tüm Rezervasyonlar</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="tblContacts" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Adı</th>
                        <th>Eposta Adresi</th>
                        <th>Konu</th>
                        <th>Mesaj</th>
                        <th>Okundu mu?</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListContact)
                    {
                        <tr>
                            <td>@item.ContactName</td>
                            <td>@item.ContactEposta</td>
                            <td>@item.ContactKonu</td>
                            <td>@item.ContactMessage</td>
                            <td>
                                <span class="contactStatus" data-contact-id="@item.ContactID" data-contact-status="@item.ContactRead">
                                    @if (item.ContactRead)
                                    {
                                        <span class="badge badge-success">Evet</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Hayır</span>
                                    }
                                </span>
                                <input type="checkbox" class="chkContactRead" ContactID="@item.ContactID" @(item.ContactRead ? "checked" : "") />
                            </td>
                            <td>
                                <button ContactID="@item.ContactID" class="btn btn-danger btnDelete">
                                    Sil
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</div>

